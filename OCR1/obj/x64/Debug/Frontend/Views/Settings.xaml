<Page
    x:Class="OCR1.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OCR1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <StackPanel Margin="20">
                <TextBlock Text="Recognition" FontSize="22"/>
                <StackPanel>
                    <TextBlock Text="Console log" Margin="5,10,5,0"/>
                    <ToggleSwitch x:ConnectionId='3' Name="sett_log" IsOn="False" Margin="5,0"                       />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Server connection" Margin="5,10,5,0"/>
                    <ToggleSwitch x:ConnectionId='2' Name="sett_db" IsOn="False" Margin="5,0" IsEnabled="False"                       />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

